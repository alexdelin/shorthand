<!DOCTYPE html>
<html>
<head>

    {{ static_content['common_imports'] }}

    <!-- Markdown & LaTeX Rendering -->
    <link rel="stylesheet" href="/css/katex.min.css">
    <link rel="stylesheet" href="/css/texmath.css">
    <script src="/js/markdown-it.min.js"></script>
    <script src="/js/katex.min.js"></script>
    <script src="/js/texmath.js"></script>

    <!-- Code Highlighting -->
    <link rel="stylesheet" href="/css/highlight.min.css">
    <script src="/js/highlight.min.js"></script>
    <link rel="stylesheet" href="/css/atom-one-light.css">

    <!-- Data Table Rendering -->
    <link rel="stylesheet" href="/css/dataTables.bootstrap4.min.css">
    <script src="/js/jquery.dataTables.min.js"></script>
    <script src="/js/dataTables.bootstrap4.min.js"></script>

    <!-- Library to draw links diagram -->
    <script src="/js/cytoscape.js"></script>
    <script src="https://unpkg.com/klayjs@0.4.1/klay.js"></script>
    <script src="/js/cytoscape-klay.js"></script>

    <!-- Helpers for this page -->
    <script src="/js/underscore-min.js"></script>
    <script src="/js/shorthand-viewer.js"></script>

    <!-- Mermaid Diagram Rendering -->
    <script src="/js/mermaid.min.js"></script>

    <!-- Map Plugin -->
    <link rel="stylesheet" href="/css/leaflet.css"/>
    <script src="/js/leaflet.js"></script>

    <meta charset='utf-8'>
    <title>Notes</title>
</head>
<body>

<style>
    #mapModalMap {
        width: 100%;
        height: 600px;
    }
    .modal-dialog {
        max-width: 800px;
    }
    pre {
        border-color: black;
        border: 1px solid #bbb;
        padding: 15px;
        border-radius: 5px;
        background-color: #fafafa;
    }
</style>

<!-- Metadata -->
<div id="meta-file-path" style="display: none;">{{ file_path }}</div>

<div class="row fullwrapper justify-content-center">
    <div class="render-pagewrapper">

        {{ static_content['header_html'] }}

        <div class="row justify-content-end">
            <div class="col-md-8">
                <div class="form-row align-items-center" style="padding: 15px; padding-bottom: 0px;">
                    <div class="col">
                        <div id="showTOC" class="btn btn-primary"><i class="bi-list-nested"></i>&nbsp;Show ToC</div>
                    </div>
                    <div class="col">
                        <div id="showLinks" class="btn btn-primary"><i class="bi-link-45deg"></i>&nbsp;Show Links</div>
                    </div>
                    <div class="col">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="toggleExtLinks">
                            <label class="custom-control-label" for="toggleExtLinks">External Links</label>
                        </div>
                    </div>
                    <div class="col">
                        <a href="/editor?path={{ file_path }}" class="btn btn-warning"><i class="bi-pencil"></i>&nbsp;Edit</a>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-12">
                <div class="toc-content hidden">
                    <h3>Table of Contents</h3>
                    <div id="toc"></div>
                </div>
                <div class="links-content hidden">
                    <h3>Links</h3>
                    <div id="links" style="width: 100%; height: 300px;"></div>
                </div>
            </div>
        </div>
        <div class="row content">
            <div class="note-content">
                <div id="out"></div>
            </div>
        </div>
        <div class="row footer-bar">
            <div class="col-md-12"></div>
        </div>
    </div>
</div>

{{ static_content['file_finder_modal'] }}

{{ static_content['error_modal'] }}

<!-- Map Modal -->
<div id="modalWrapper">
  <div class="modal fade" id="shorthandMapModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="mapModalTitle">Location Name</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="mapModalContent" class="modal-body">
          <div id="mapModalMap"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(renderNote());
</script>

</body>
</html>
