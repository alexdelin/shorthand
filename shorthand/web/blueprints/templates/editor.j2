<body>

<style>
    #mapModalMap {
        width: 100%;
        height: 600px;
    }
    .modal-dialog {
        max-width: 800px;
    }

    pre {
        border-color: black;
        border: 1px solid #bbb;
        padding: 15px;
        border-radius: 5px;
        background-color: #fafafa;
    }

    .brokenLink {
        position:absolute;
        background: #f07567;
        z-index:20
    }
</style>

<!-- Metadata -->
<div id="meta-file-path" style="display: none;">{{ file_path }}</div>

<div class="row fullwrapper justify-content-center">
    <div class="render-pagewrapper" style="max-width: 1600px; min-width: 1200px;">

        {{ static_content['header_html'] }}

        <div class="row" style="padding: 10px;">
            <div class="col-auto">
                <!-- Reload Button -->
                <div id="reloadNote" class="btn btn-outline-success"><i class="bi bi-arrow-clockwise"></i>&nbsp;Reload</div>
            </div>
            <div class="col-auto">
                <!-- Save Button -->
                <div id="saveNote" class="btn btn-outline-danger"><i class="bi bi-save"></i>&nbsp;Save</div>
            </div>
            <div class="col-auto">
                <!-- Save Button -->
                <a href="/render?path={{ file_path }}" class="btn btn-outline-warning"><i class="bi bi-search"></i>&nbsp;View</a>
            </div>
            <div class="col-auto">
                <!-- Warning Message -->
                <i id="problemWarning" class="bi bi-exclamation-triangle hidden" style="font-size: 30px; vertical-align: middle;"></i>
            </div>
        </div>

        <div class="row content">
            <div class="col-md-6">
                <!-- TODO: Set height properly and dynamically https://github.com/joemccann/dillinger/blob/2eac1382312bfbf2ad6b8c063b5a1a43a9ffd129/public/js/base/base.controller.js#L58-L64 -->
                <div id="editor" style="width: 100%; height: 800px; border: 1px solid black;"></div>
            </div>
            <div class="col-md-6" style="height: 800px; overflow: scroll;">
                <div id="out" style="padding-right: 15px;"></div>
            </div>
        </div>
        <div class="row footer-bar">
            <div class="col-md-12" style="height: 50px; background: #999"></div>
        </div>
    </div>
</div>

{{ static_content['file_finder_modal'] }}

{{ static_content['error_modal'] }}

<!-- Map Modal -->
<div id="modalWrapper">
  <div class="modal fade" id="shorthandMapModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="mapModalTitle">Location Name</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="mapModalContent" class="modal-body">
          <div id="mapModalMap"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Note Problem Modal -->
<div id="modalWrapper">
  <div class="modal fade" id="shorthandNoteProblemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="noteProblemModalTitle">Note Problems</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="noteProblemModalContent" class="modal-body">
          <ul id="noteProblemList">
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Draw Editor
var editor = ace.edit("editor", {
    wrap: true,
    mode: 'ace/mode/markdown'
});
// editor.setTheme("ace/theme/monokai");
editor.setTheme("ace/theme/shorthand-light");
editor.setFontSize('18px');
editor.setOptions({fontFamily: "iosevka",})
editor.commands.addCommand({
    name: "saveNote",
    bindKey: { win: "Ctrl-S", mac: "Command-S" },
    exec: function (editor) {
        saveNote();
    }
});
editor.commands.addCommand({
    name: "findNotes",
    bindKey: { win: "Ctrl-T", mac: "Ctrl-T" },
    exec: function (editor) {
        showFileFinder();
    }
});

$(document).ready(function() {
     renderNote();
     reloadNote();
});
</script>

</body>
</html>
